{
  "name": "hello-world",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "build:node": "node scripts/build.mjs",
    "start:production": "node scripts/start-production.mjs",
    "dev": "node ace serve --hmr",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "build_dev": "node build/bin/server.js",
    "build_prod": "cp ./.env ./build/ && node build/bin/server.js"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#utils/*": "./app/utils/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.0.0",
    "@adonisjs/prettier-config": "^1.4.4",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/api-client": "^3.1.0",
    "@japa/assert": "^4.0.1",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@swc/core": "1.11.24",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.12",
    "@types/nodemailer": "^7.0.2",
    "eslint": "^9.26.0",
    "hot-hook": "^0.4.0",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "ts-node-maintained": "^10.9.5",
    "tsc-alias": "^1.8.10",
    "typescript": "~5.8"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.5.1",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/cors": "^2.2.1",
    "@adonisjs/http-server": "^7.7.0",
    "@adonisjs/lucid": "^21.8.0",
    "@adonisjs/session": "^7.5.1",
    "@adonisjs/validator": "^13.0.2",
    "@types/socket.io": "^3.0.1",
    "@vinejs/vine": "^3.0.1",
    "edge.js": "^6.3.0",
    "firebase-admin": "^13.6.0",
    "luxon": "^3.7.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
